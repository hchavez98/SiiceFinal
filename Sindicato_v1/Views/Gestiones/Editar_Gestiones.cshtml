</nav>

<ul class="breadcrumb">
    <li><a href="https://localhost:44378/#inicio">SIICE - Inicio</a></li>
    <li><a href="/Usuario/Administrador/">Administrativo</a></li>
    <li><a href="/Gestiones/Gestiones/">Gestiones</a></li>
    <li>Control de Gestiones</li>
</ul>

<h2>Control de Gestiones</h2>

<hr class="hr-custom">

<div class="container">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Motivo</th>
                    <th>F Inicio</th>
                    <th>F Fin</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Tipo Gestión</th>
                    <th>F Ausencia</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj_Ges in Model)
                {
                    <tr>
                        <th>@obj_Ges.Id_Ges</th>
                        <td>@obj_Ges.Motivo</td>
                        <td>@obj_Ges.F_Inicio</td>
                        <td>@obj_Ges.F_Fin</td>
                        <td>@obj_Ges.Nombre</td>
                        <td>@obj_Ges.Ap_Paterno</td>
                        <td>@obj_Ges.T_Gestion</td>
                        <td>@obj_Ges.F_Ausencia</td>
                        <td>
                            <a class="btn btn-default" onclick="return DeleteConfirm();" href="/Gestiones/Eliminar_Gestion/@obj_Ges.Id_Ges" style="width:80px; height:35px;">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (ViewBag.Msg == "Eliminado")
{
    <script type="text/javascript">
        window.onload = function () {
            swal({
                title: "Confirmación",
                text: "¡Se eliminó exitosamente!",
                icon: "warning"
            });
        }
    </script>
}

<script type="text/javascript">
    function DeleteConfirm() {
        if (confirm("¿Eliminar este registro?"))
            return true;
        else
            return false;
    }
</script>

