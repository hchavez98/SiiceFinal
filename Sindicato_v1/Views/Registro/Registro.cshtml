<script type="text/javascript">
    $('#fecha_Nac').change(function () {

        var date1 = moment($('#fecha_Nac').val());

        var today = Date.now();

        if (date1 > today) {
            swal("¡Atención!", "La fecha de nacimiento no puede ser una fecha futura.");
            $('#fecha_Nac').val(null);
        }
    });
</script>

