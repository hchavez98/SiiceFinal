@model Sindicato_v1.Models.ViewModels.AddAgremiadoViewModel

@{
    ViewBag.Title = "Afiliación";
}

@if (ViewBag.Msg == "Pass")
{
    <script type="text/javascript">
        window.onload = function () {
            swal({
                title: "Error",
                text: "¡Las contraseña ingresada y su confirmación no coinciden! \n Revíselas en intentelo de nuevo",
                icon: "error"
            });
        }
    </script>
}

