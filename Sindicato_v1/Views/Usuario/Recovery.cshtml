<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <img style="padding: 40px 0px 40px;" src="~/Content/Resources/Images/logo_Login.png" id="icon" alt="User Icon" />
        </div>

        <div class="text-center">
            <h4>Para recuperar su cuenta por favor complete lo siguiente:</h4>
        </div>
        <!-- Recovery Form -->
        <form action="@Url.Content("~/Usuario/Recovery")" method="post">
            <label>Escriba aqui su nueva contraseña:</label>
            @Html.PasswordFor(d => d.Contraseña, new { @class = "form-control fadeIn first", id = "login-form", type = "password", placeholder = "Nueva contraseña" })
            <label>Confirme su nueva contraseña:</label>
            @Html.PasswordFor(d => d.Contraseña2, new { @class = "form-control fadeIn second", id = "login-form", type = "password", placeholder = "Confirmar contraseña" })

            <input type="submit" class="fadeIn fourth" value="Continuar">

        </form>


        <!-- Remind Passowrd -->
    </div>
</div>

