@{
    ViewBag.Title = "Login SIICE";
}

@if (ViewBag.Msg == "Agregado")
{
    <script type="text/javascript">
        window.onload = function () {
            swal({
                title: "Confirmación",
                text: "¡Se registró exitosamente! espere a que un administrador de SIICE acepte su solicitud de afiliación",
                icon: "success"
            });
        }
    </script>
}

@if (ViewBag.Msg == "Recuperado")
{
    <script type="text/javascript">
        window.onload = function () {
            swal({
                title: "Aviso",
                text: "Se envió le un correo electrónico con un enlace para recuperar la contraseña de su cuenta.",
                icon: "info"
            });
        }
    </script>
}

@if (ViewBag.Msg == "Error_Log")
{
    <script type="text/javascript">
        window.onload = function () {
            swal({
                title: "Usuario no válido",
                text: "El usuario o contraseña que ingresó no son válidos",
                icon: "error"
            });
        }
    </script>
}

