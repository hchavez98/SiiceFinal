<div>
    <h2>Editar tipo acta</h2>
    <h5>Ingrese la nueva información en su respectivo campo</h5>
</div>

<hr class="hr-custom">

@using (Html.BeginForm("Editar_TipoActa", "TipoActa", FormMethod.Post))
{
    <div class="row" id="errores">
        <div class="col-md-12">
            @Html.HiddenFor(f => f.id_R)
            <div>
                @Html.LabelFor(f => f.TipoActa)
                @Html.TextBoxFor(f => f.TipoActa, "", new { @class = "form-control validate[required, custom[onlyLetterAccentSp]]" })
                @Html.ValidationMessageFor(d => d.TipoActa, null, new { @class = "text-danger" })
            </div>
            <br />
            <div style="text-align: right">
                <input value="Guardar" class="btn btn-primary" type="submit" />
            </div>
        </div>
    </div>
}

<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
